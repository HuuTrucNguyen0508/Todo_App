{
  "name": "cursor-todo",
  "version": "1.0.0",
  "description": "Todo app with full observability stack",
  "private": true,
  "scripts": {
    "bootstrap": "pnpm install",
    "build": "pnpm --filter=web build && pnpm --filter=api build",
    "dev": "pnpm --parallel --filter=web --filter=api dev",
    "lint": "pnpm --recursive lint",
    "lint:fix": "pnpm --recursive lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "echo 'Tests not implemented yet' && exit 0",
    "migrate": "pnpm --filter=api migrate"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "pg": "^8.16.3"
  }
}
